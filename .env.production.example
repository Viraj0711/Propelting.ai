# =====================================
# Production Environment Configuration
# =====================================
# DO NOT commit this file with real values!
# Copy to .env and fill in actual values

# Database Configuration
DATABASE_URL=postgresql://propelting:CHANGE_THIS_PASSWORD@postgres:5432/propelting
POSTGRES_USER=propelting
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=propelting

# Redis Configuration  
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
CELERY_BROKER_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/1
CELERY_RESULT_BACKEND=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/1

# JWT & Security (MUST be at least 32 characters)
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_STRING_OR_LONGER
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=propelting-meetings-prod
AWS_REGION=us-east-1

# Application Settings
NODE_ENV=production
DEBUG=false
LOG_LEVEL=INFO
PORT=8000

# URLs
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Integration API Keys (Optional)
JIRA_API_KEY=
SLACK_BOT_TOKEN=
GOOGLE_CALENDAR_CREDENTIALS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
