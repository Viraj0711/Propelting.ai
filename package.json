{
  "name": "propelting-ai",
  "version": "1.0.0",
  "description": "AI-powered meeting intelligence platform",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,green\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend-only": "npm run dev:frontend",
    "dev:backend-only": "npm run dev:backend",
    "install:frontend": "npm install --workspace=frontend",
    "install:backend": "npm install --prefix backend",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --prefix backend",
    "lint": "npm run lint --workspace=frontend",
    "type-check": "npm run type-check --workspace=frontend",
    "preview": "npm run preview --workspace=frontend",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --prefix backend",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "db:push": "npm run db:push --prefix backend",
    "db:studio": "npm run db:studio --prefix backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.57.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/Propelting.ai_pvt"
  },
  "keywords": [
    "meeting",
    "ai",
    "transcription",
    "action-items",
    "productivity"
  ],
  "author": "",
  "license": "MIT"
}
